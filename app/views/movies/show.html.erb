<div class = "panel.panel-defaul">
    <div div class="panel-body"> </div>
        <div class="row">
            <div class="col-md-4">
               <%= image_tag @movie.image.url(:medium) %>
                   <div class="table-responsive">
                       <table class="table">
                          <tbody>
                             <tr>
                             <td> <strong>Title:</strong> </td>
                             <td> <%= @movie.title %> </td>
                             </tr>

                             <tr>
                             <td> <strong>Description:</strong> </td>
                             <td>  <%= @movie.description %></td>
                             </tr>
                             
                             <tr>
                             <td> <strong>Movie lengh:</strong></td>
                             <td> <%= @movie.movie_lengh %></td>
                             </tr>


                             <tr>
                             <td> <strong>Director:</strong></td>
                             <td> <%= @movie.director %></td>
                             </tr>

                             <tr>
                             <td>  <strong>Rating:</strong> </td>
                             <td> <%= @movie.rating %></td>
                             </tr>
                             <tr>
                             <td><%= link_to 'Edit', edit_movie_path(@movie) %> | <%= link_to 'Back', root_path %> | <%= link_to 'Destroy', @movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                             </tr>
                           
                           </tbody>
                        </table>
                  </div>
             </div>
      </div>
 </div>